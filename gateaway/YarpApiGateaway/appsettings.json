{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ReverseProxy": {
    "Routes": {
      "user-register": {
        "ClusterId": "user-auth-cluster",
        "Match": {
          "Path": "/user-auth/register",
          "Methods": [ "POST" ]
        }
      },
      "user-login": {
        "ClusterId": "user-auth-cluster",
        "Match": {
          "Path": "/user-auth/login",
          "Methods": [ "POST" ]
        }
      },
      "user-refresh-token": {
        "ClusterId": "user-auth-cluster",
        "Match": {
          "Path": "/user-auth/refresh",
          "Methods": [ "PUT" ]
        },
        "AuthorizationPolicy": "UserAuthPolicy"
      },
      "user-reset-password": {
        "ClusterId": "user-auth-cluster",
        "Match": {
          "Path": "/user-auth/reset-password",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "UserPolicy"
      },
      "user-forgot-password": {
        "ClusterId": "user-auth-cluster",
        "Match": {
          "Path": "/user-auth/forgot-password",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "UserPolicy"
      },
      "user-change-password": {
        "ClusterId": "user-auth-cluster",
        "Match": {
          "Path": "/user-auth/change-password",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "UserPolicy"
      },
      "user-logout": {
        "ClusterId": "user-auth-cluster",
        "Match": {
          "Path": "/user-auth/logout",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "UserAuthPolicy"
      },
      "order-create": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/orders",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "UserPolicy"
      },
      "order-calculate": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/orders/calculate",
          "Methods": [ "POST" ]
        }
      },
      "order-paged": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/orders",
          "Methods": [ "GET" ]
        },
        "AuthorizationPolicy": "UserPolicy"
      },
      "order-tracker": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/orders/{tracker}",
          "Methods": [ "GET" ]
        }

      },
      "order-status": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/orders/{tracker}/status",
          "Methods": [ "PATCH" ]
        },
        "AuthorizationPolicy": "AdminPolicy"
      },
      "order-point": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/orders/{tracker}/point",
          "Methods": [ "PATCH" ]
        },
        "AuthorizationPolicy": "AdminPolicy"
      },
      "admin-register": {
        "ClusterId": "admin-cluster",
        "Match": {
          "Path": "/admin-auth/register",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "SuperAdminPolicy"
      },
      "admin-login": {
        "ClusterId": "admin-cluster",
        "Match": {
          "Path": "/admin-auth/login",
          "Methods": [ "POST" ]
        }
      },
      "admin-refresh-token": {
        "ClusterId": "admin-cluster",
        "Match": {
          "Path": "/admin-auth/refresh",
          "Methods": [ "PUT" ]
        },
        "AuthorizationPolicy": "AdminAuthPolicy"
      },
      "admin-logout": {
        "ClusterId": "admin-cluster",
        "Match": {
          "Path": "/admin-auth/logout",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "AdminAuthPolicy"
      },
      "point-create": {
        "ClusterId": "point-cluster",
        "Match": {
          "Path": "/points",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "AdminPolicy"
      },
      "point-get": {
        "ClusterId": "point-cluster",
        "Match": {
          "Path": "/points",
          "Methods": [ "GET" ]
        }
      },
      "point-update": {
        "ClusterId": "point-cluster",
        "Match": {
          "Path": "/points/{id}",
          "Methods": [ "PATCH" ]
        },
        "AuthorizationPolicy": "AdminPolicy"
      },
      "point-delete": {
        "ClusterId": "point-cluster",
        "Match": {
          "Path": "/points",
          "Methods": [ "DELETE" ]
        },
        "AuthorizationPolicy": "AdminPolicy"
      },
      "cluster-get": {
        "ClusterId": "point-cluster",
        "Match": {
          "Path": "/points/clusters",
          "Methods": [ "GET" ]
        }
      },
      "history-get": {
        "ClusterId": "history-cluster",
        "Match": {
          "Path": "/orders/{id}/history",
          "Methods": [ "GET" ]
        },
        "AuthorizationPolicy": "UserPolicy"
      }
    },
    "Clusters": {
      "user-auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://userauth.api:8081/api"
          }
        }
      },
      "admin-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://admin.api:8081/api"
          }
        }
      },
      "order-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://order.api:8081/api"
          }
        }
      },
      "point-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://companypoints.api:8081/api"
          }
        }
      },
      "history-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://orderhistory.api:8081/api"
          }
        }
      }
    }
  }
}
